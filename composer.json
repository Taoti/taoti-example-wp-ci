{
    "name": "taoti/wordpress-ci",
    "description": "Base Wordpress project for CI usage.",
    "type": "project",
    "license": "proprietary",
    "require-dev": {
        "wp-coding-standards/wpcs": "^2.2",
        "dealerdirect/phpcodesniffer-composer-installer": "^0.6.2"
    },
    "autoload": {
        "classmap": [
            "scripts/composer/ScriptHandler.php"
        ]
    },
    "scripts": {
        "build-assets": [
            "@prepare-for-pantheon",
            "composer install --optimize-autoloader --no-dev",
            "@build-theme"
        ],
        "build-theme": [
            "cd web/wp-content/themes/THEME_NAME && npm install",
            "gulp build --cwd=web/wp-content/themes/THEME_NAME"
        ],
        "lint": [
            "find web/wp-content/plugins web/wp-content/themes -name '*.php' -exec php -l {} \\;"
        ],
        "code-sniff": [
            "./vendor/bin/phpcs --standard=WordPress --extensions=php --ignore=_recommended_plugins,node_modules,vendor,source ./web/wp-content/themes/THEME_NAME"
        ],
        "code-fix": [
            "./vendor/bin/phpcbf --standard=WordPress --extensions=php --ignore=_recommended_plugins,node_modules,vendor,source ./web/wp-content/themes/THEME_NAME"
        ],
        "style-sniff": "stylelint \"./web/wp-content/themes/THEME_NAME/**/*.scss\"",
        "style-fix": "stylelint \"./web/wp-content/themes/THEME_NAME/**/*.scss\" --fix",
        "auto-fix":[
            "./vendor/bin/phpcbf -q --standard=WordPress --extensions=php --ignore=_recommended_plugins,node_modules,vendor,source ./web/wp-content/themes/THEME_NAME",
            "stylelint \"./web/themes/THEME_NAME/**/*.scss\" --fix --quiet"
        ],
        "git-hooks":"DrupalProject\\composer\\ScriptHandler::enableGitHooks",
        "prepare-for-pantheon": "DrupalProject\\composer\\ScriptHandler::prepareForPantheon",
        "setup-theme":  "DrupalProject\\composer\\ScriptHandler::setupTheme",
        "setup-new-site":"DrupalProject\\composer\\ScriptHandler::setupSite"
    },
    "scripts-descriptions": {
        "git-hooks": "Add git commit hooks to automatically perform standards fixes. Pass argument `lando` if hooks will be used with Lando.",
        "setup-new-site": "Perform initialization for a new site.",
        "setup-new-theme":"Used by `setup-new-site` to add new theme to the new site."
    },
    "require": {
        "wp-cli/wp-cli-bundle": "^2.4"
    }
}
